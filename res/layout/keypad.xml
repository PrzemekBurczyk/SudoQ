<?xml version="1.0" encoding="utf-8"?>

<TableLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/keypad" 
    android:orientation="vertical" 
    android:gravity="bottom"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:stretchColumns="*" >
	<TableRow>
		<Button android:id="@+id/keypad_1"  android:text="1" android:onClick="keypadClick"></Button>
		<Button android:id="@+id/keypad_2"  android:text="2" android:onClick="keypadClick"></Button>
		<Button android:id="@+id/keypad_3"  android:text="3" android:onClick="keypadClick"></Button>
		<Button android:id="@+id/keypad_4"  android:text="4" android:onClick="keypadClick"></Button>
		<Button android:id="@+id/keypad_5"  android:text="5" android:onClick="keypadClick"></Button>
	</TableRow>
	<TableRow>
		<Button android:id="@+id/keypad_6"  android:text="6" android:onClick="keypadClick"></Button>
		<Button android:id="@+id/keypad_7"  android:text="7" android:onClick="keypadClick"></Button>
		<Button android:id="@+id/keypad_8"  android:text="8" android:onClick="keypadClick"></Button>
		<Button android:id="@+id/keypad_9"  android:text="9" android:onClick="keypadClick"></Button>
		<Button android:id="@+id/keypad_C"  android:text="C" android:onClick="keypadClick"></Button>
	</TableRow>
</TableLayout>
